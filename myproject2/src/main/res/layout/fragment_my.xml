<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="208dp"
            android:background="@drawable/bg_mine" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.5dp"
            android:text="个人中心"
            android:textColor="#ffffffff"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="94.5dp"
                android:src="@drawable/avatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="108.5dp"
                    android:layout_marginTop="112dp"
                    android:text="未登录"
                    android:textColor="#ffffffff"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="106dp"
                    android:layout_marginTop="140.5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_tologin"
                        android:layout_width="65dp"
                        android:layout_height="28dp"
                        android:background="@drawable/mylogin_btn"
                        android:text="登录"
                        android:textColor="#ffffffff" />

                    <Button
                        android:id="@+id/btn_toreg"
                        android:layout_width="65dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/myreg_btn"
                        android:text="注册"
                        android:textColor="#ffffffff" />


                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="220.5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="8"
                android:textColor="#333333"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏场馆"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="91dp"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="12"
                android:textColor="#333333"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览历史"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


    <!--修改资料-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="322.5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_mine_information" />

        <TextView
            android:id="@+id/tv_change_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="修改资料"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_change_info_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="209.5dp"
            android:src="@mipmap/ic_in_big" />
    </LinearLayout>

    <!--退出登录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="384.5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_mine_outlogin" />

        <TextView
            android:id="@+id/tv_outlogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="退出登录"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_outlogin_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="209.5dp"
            android:src="@mipmap/ic_in_big" />
    </LinearLayout>


</RelativeLayout>